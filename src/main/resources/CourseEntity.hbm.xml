<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.CourseEntity" table="course" schema="online_skill_system">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(120)" length="120"/>
        </property>
        <property name="price">
            <column name="price" sql-type="decimal(6,2)" precision="6" scale="2" not-null="true"/>
        </property>
        <property name="teacher">
            <column name="teacher" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>